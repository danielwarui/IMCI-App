<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/give_home_care_for_the_young_infant_one"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/if_baby_cannot_be_breastfed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/link" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="@string/give_home_care_for_the_young_infant_two"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/when_to_ret"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFollowUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow up visit" />

    <Button
        android:id="@+id/btnWhentoReturn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When to return immediately" />
</LinearLayout>